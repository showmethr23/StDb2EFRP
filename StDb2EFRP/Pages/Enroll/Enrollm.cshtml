@page
@model StDb2EFRP.Pages.Enroll.EnrollmModel

@{
    ViewData["Title"] = "Enrollm";
}

<h1>Enrollm</h1>

<h2>Enrollm</h2>
<p>
    <a asp-page="Register">Register for Course</a>
</p>
<form name="f1" method="post" asp-page="Enrollm">
<div class="container">
    <div class="col-md-2 row">
        <select asp-for="@Model.SelectedCourse" asp-items="@Model.CSList"></select>
    </div>
    <div class="col-md-10">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EList[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EList[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EList[0].StudentId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EList[0].Credits)
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.EList)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                <td>
                    <a asp-page="../Stu/Details" asp-route-id="@item.StudentId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.StudentId" asp-route-cnum="@Model.SelectedCourse">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
</div>
    </form>
@section Scripts{
    <script>
        $(function () {
            $("#SelectedCourse").change(function () {
                this.closest('form').submit();
            });
        });
    </script>
}
